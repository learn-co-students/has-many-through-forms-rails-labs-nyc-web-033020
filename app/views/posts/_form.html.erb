<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br />
  <%= f.label :content %>
  <%= f.text_area :content %><br />
  <%= f.label :categories %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories, post.categories.build do |c| %>
    <%= c.text_field :name %>
  <% end %>
  <%= f.label :users %>
  <%= f.collection_select :user_ids, User.all, :id, :username %>
  <%= f.fields_for :users, post.users.build do |u| %>
    <%= u.text_field :username %>
  <% end %>
  <%= f.submit %>
<% end %>
